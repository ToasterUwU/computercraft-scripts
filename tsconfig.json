{
    "$schema": "https://raw.githubusercontent.com/MCJack123/TypeScriptToLua/master/tsconfig-schema.json",
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "moduleResolution": "node",
        "strict": false,
        "types": ["@jackmacwindows/lua-types/cc-5.2", "@jackmacwindows/craftos-types", "@jackmacwindows/cc-types", "@typescript-to-lua/language-extensions"]
    },
    "tstl": {
        "buildMode": "default",
        "luaTarget": "CC-5.2",
        "luaLibImport": "inline"
    },
    "include": [
        "src/**/*.ts",
        "programs/**/*.ts",
        "lib/**/*.ts",
        "./*.ts"
    ],
    "exclude": [
        "node_modules",
        "types"
    ]
}